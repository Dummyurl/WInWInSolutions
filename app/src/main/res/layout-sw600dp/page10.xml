<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toplayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF" >

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp" >

        <ImageView
            android:id="@+id/applogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/applogo" />

        <RelativeLayout
            android:id="@+id/rlnew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/rlopen" >

            <Button
                android:id="@+id/btn_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/newconflictbtn" />

            <TextView
                android:id="@+id/txtnew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_new"
                android:layout_marginTop="10dp"
                android:text="New Conflict"
                android:textColor="#000000"
                android:textSize="18dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlopen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/rlclose" >

            <Button
                android:id="@+id/btn_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/openconflictbtn" />

            <TextView
                android:id="@+id/txtopen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_open"
                android:layout_marginTop="10dp"
                android:text="Open Conflict"
                android:textColor="#000000"
                android:textSize="18dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlclose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" >

            <Button
                android:id="@+id/btn_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/closeconflictbtn" />

            <TextView
                android:id="@+id/txtclose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_close"
                android:layout_marginTop="10dp"
                android:text="Close Conflict"
                android:textColor="#000000"
                android:textSize="18dp" />
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/rl_header"
        android:background="#FFFFFF"
        android:fadeScrollbars="false"
        android:fillViewport="true" >

        <LinearLayout
            android:id="@+id/firstscrolllayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/underline_page10"
                    android:textColor="#00478f"
                    android:textSize="24dp" />

                <Button
                    android:id="@+id/btnreset"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/reseticonfile" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textColor="#00478f"
                    android:textSize="23dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/imghint"
                        android:layout_weight="1"
                        android:background="#f1f1f1"
                        android:layout_marginRight="10dp"
                        android:ems="10"
                        android:gravity="top"
                        android:hint="Provide a title for your conflict"
                        android:inputType="textMultiLine"
                        android:paddingLeft="5dp"
                           android:paddingRight="5dp"
                           android:paddingTop="7dp"
                           android:paddingBottom="7dp"
                        >
                    </EditText>

                    <ImageView
                        android:id="@+id/imghint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/hintt" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/textView15"
                    android:paddingLeft="10dp"
                    android:text="Ideas"
                    android:textColor="#00478f"
                    android:textSize="23dp" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="" />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/textView23"
                    android:text="Injection/Solution"
                    android:textColor="#00478f"
                    android:textSize="23dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:id="@+id/rrl1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/injections"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/textView3"
                                    android:layout_width="50dp"
                                    android:layout_height="100dp"
                                    android:layout_marginTop="10dp"
                                    android:text="A?"
                                    android:textColor="#00478f"
                                    android:textSize="23dp" />

                                <TextView
                                    android:id="@+id/txt_a"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBottom="@+id/textView3"
                                    android:layout_alignParentTop="true"
                                    android:layout_margin="1dp"
                                    android:layout_toRightOf="@+id/textView3"
                                    android:background="#f1f1f1"
                                    android:gravity="top"
                                    android:hint="Create possible solutions (based on the assumptions and on intuition)"
                                    android:padding="10dp"
                                    android:scrollbars="vertical"
                                    android:text=""
                                    android:textColor="#000000"
                                    android:textSize="23dp" />
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal" >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/textView6" >

                                <TextView
                                    android:id="@+id/textView6"
                                    android:layout_width="50dp"
                                    android:layout_height="100dp"
                                    android:layout_marginTop="10dp"
                                    android:text="AB?"
                                    android:textColor="#00478f"
                                    android:textSize="23dp" />

                                <TextView
                                    android:id="@+id/txt_ab"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBottom="@+id/textView6"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginRight="1dp"
                                    android:layout_toRightOf="@+id/textView6"
                                    android:background="#f1f1f1"
                                    android:gravity="top"
                                    android:hint="Create possible solutions (based on the assumptions and on intuition)"
                                    android:padding="10dp"
                                    android:text=""
                                    android:textColor="#000000"
                                    android:textSize="23dp" />
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal" >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/textView9" >

                                <TextView
                                    android:id="@+id/textView9"
                                    android:layout_width="50dp"
                                    android:layout_height="100dp"
                                    android:layout_marginTop="10dp"
                                    android:text="AC?"
                                    android:textColor="#00478f"
                                    android:textSize="23dp" />

                                <TextView
                                    android:id="@+id/txt_ac"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBottom="@+id/textView9"
                                    android:layout_alignParentTop="true"
                                    android:layout_margin="1dp"
                                    android:layout_toRightOf="@+id/textView9"
                                    android:background="#f1f1f1"
                                    android:gravity="top"
                                    android:hint="Create possible solutions (based on the assumptions and on intuition)"
                                    android:padding="10dp"
                                    android:text=""
                                    android:textColor="#000000"
                                    android:textSize="23dp" />
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal" >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/textView12" >

                                <TextView
                                    android:id="@+id/textView12"
                                    android:layout_width="50dp"
                                    android:layout_height="100dp"
                                    android:layout_marginTop="10dp"
                                    android:text="BD?"
                                    android:textColor="#00478f"
                                    android:textSize="23dp" />

                                <TextView
                                    android:id="@+id/txt_bd1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBottom="@+id/textView12"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginRight="1dp"
                                    android:layout_toRightOf="@+id/textView12"
                                    android:background="#f1f1f1"
                                    android:gravity="top"
                                    android:hint="Create possible solutions (based on the assumptions and on intuition)"
                                    android:padding="10dp"
                                    android:text=""
                                    android:textColor="#000000"
                                    android:textSize="23dp" />
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal" >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/textView16" >

                                <TextView
                                    android:id="@+id/textView16"
                                    android:layout_width="50dp"
                                    android:layout_height="100dp"
                                    android:layout_marginTop="10dp"
                                    android:text="CD&apos;?"
                                    android:textColor="#00478f"
                                    android:textSize="23dp" />

                                <TextView
                                    android:id="@+id/txt_cd2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBottom="@+id/textView16"
                                    android:layout_alignParentTop="true"
                                    android:layout_margin="1dp"
                                    android:layout_toRightOf="@+id/textView16"
                                    android:background="#f1f1f1"
                                    android:gravity="top"
                                    android:hint="Create possible solutions (based on the assumptions and on intuition)"
                                    android:padding="10dp"
                                    android:text=""
                                    android:textColor="#000000"
                                    android:textSize="23dp" />
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal" >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/textView19" >

                                <TextView
                                    android:id="@+id/textView19"
                                    android:layout_width="50dp"
                                    android:layout_height="100dp"
                                    android:layout_marginTop="10dp"
                                    android:text="DD&apos;?"
                                    android:textColor="#00478f"
                                    android:textSize="23dp" />

                                <TextView
                                    android:id="@+id/txt_d1d2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBottom="@+id/textView19"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginBottom="1dp"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginRight="1dp"
                                    android:layout_toRightOf="@+id/textView19"
                                    android:background="#f1f1f1"
                                    android:gravity="top"
                                    android:hint="Create possible solutions (based on the assumptions and on intuition)"
                                    android:padding="10dp"
                                    android:text=""
                                    android:textColor="#000000"
                                    android:textSize="23dp" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/injections"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/rrl1"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/textView4"
                        android:fadeScrollbars="false"
                        android:gravity="top"
                        android:hint="Create the solution and write it down\n• Check to see that the solution meets the needs of B and C: &quot;If I carry out/ensure the solution activity then I will attain B and C, because...&quot;.\n• Include reasons why the solution leads to satisfying the needs of B and C.\n• If the solution and the two reasons are inconsistent, work on the wording or select another option from the list of possible solutions on the left."
                        android:inputType="textMultiLine"
                        android:padding="10dp"
                        android:scrollbars="vertical"
                        android:textColor="#000000"
                        android:textSize="23dp" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:text="" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/seek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:weightSum="10" >

                <SeekBar
                    android:id="@+id/sBcompleted"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/cuseekbar" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/seekcompleted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:weightSum="10" >

                <TextView
                    android:id="@+id/txtcompleted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="5dp"
                    android:text="completed"
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tvcompleted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/txtcompleted"
                    android:layout_weight="2"
                    android:text="0%"
                    android:textColor="#000000"
                    android:textSize="18dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="File name already exists"
                android:textColor="#FF00FF"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/ff"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_alignParentBottom="true" >

                    <View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#000000" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_alignBottom="@+id/view4"
                        android:layout_alignLeft="@+id/view1"
                        android:background="#000000" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_alignBottom="@+id/view4"
                        android:layout_toRightOf="@+id/gg2"
                        android:background="#000000" />

                    <RelativeLayout
                        android:id="@+id/gg1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" >
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/gg2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/gg1"
                        android:layout_below="@+id/gg1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp" >

                        <Button
                            android:id="@+id/btn_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/back" />

                        <RelativeLayout
                            android:id="@+id/gg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp" >

                            <Button
                                android:id="@+id/btnstory"
                                style="?android:attr/buttonStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:background="#FFFFFF"
                                android:text="Story"
                                android:textSize="22dp" />

                            <TextView
                                android:id="@+id/tt1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="4dp"
                                android:layout_toRightOf="@+id/btnstory"
                                android:text="-"
                                android:textColor="#000000"
                                android:textSize="22dp" />

                            <Button
                                android:id="@+id/btndiagrom"
                                style="?android:attr/buttonStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginLeft="5dp"
                                android:layout_toRightOf="@+id/tt1"
                                android:background="#FFFFFF"
                                android:text="Diagram"
                                android:textSize="22dp" />

                            <TextView
                                android:id="@+id/tt2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="4dp"
                                android:layout_toRightOf="@+id/btndiagrom"
                                android:text="-"
                                android:textColor="#000000"
                                android:textSize="22dp" />

                            <Button
                                android:id="@+id/assumptions1"
                                style="?android:attr/buttonStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="4dp"
                                android:layout_toRightOf="@+id/tt2"
                                android:background="#FFFFFF"
                                android:text="Assumptions (A,B,D) "
                                android:textColor="#000000"
                                android:textSize="22dp" />

                            <TextView
                                android:id="@+id/tt3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="4dp"
                                android:layout_toRightOf="@+id/assumptions1"
                                android:text="-"
                                android:textColor="#000000"
                                android:textSize="22dp" />

                            <Button
                                android:id="@+id/bttt"
                                android:layout_width="40dp"
                                android:layout_height="50dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginLeft="5dp"
                                android:background="#FFFFFF"
                                android:text=""
                                android:visibility="gone" />
                        </RelativeLayout>

                        <Button
                            android:id="@+id/btn_next"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/next" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/gg3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/gg2"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal" >

                        <Button
                            android:id="@+id/assumptions2"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="#FFFFFF"
                           android:text="Assumptions (C,D&apos;,DD&apos;) "
                            android:textColor="#000000"
                            android:textSize="22dp" />

                        <TextView

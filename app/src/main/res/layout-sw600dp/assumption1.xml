                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="TextView"
                               android:paddingTop="35dp"
                                android:textSize="0dp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/r3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/r2"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/textViewt4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:text="Need B"
                                android:textColor="#00478f"
                                android:textSize="23dp" />

                            <EditText
                                android:id="@+id/need_b"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/textView10"
                                android:layout_below="@+id/textViewt4"
                                android:ems="10"
                                android:fadeScrollbars="true"
                                android:gravity="top"
                                android:hint="What need do you fulfill by action D? Needs should not be actions. Use words like HAVE, BE, ENSURE"
                                android:scrollbars="vertical" />

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/need_b"
                                android:paddingLeft="10dp"
                                android:text="Need C"
                                android:textColor="#00478f"
                                android:textSize="23dp" />

                            <EditText
                                android:id="@+id/need_c"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/textView11"

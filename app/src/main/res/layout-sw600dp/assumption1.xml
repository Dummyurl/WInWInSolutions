                                <TextView
                                    android:id="@+id/textView15"
                                    android:layout_width="wrap_content"
                                    android:layout_height="200dp"
                                    android:text="" />
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/textView45"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="In order to have B, D is needed because"
                                android:textColor="#00478f"
                                android:textSize="23dp" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" >

                                <EditText
                                    android:id="@+id/b_d1_needed"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBottom="@+id/textView16"
                                    android:layout_alignParentTop="true"
                                    android:ems="10"
                                    android:gravity="top"
                                    android:hint="Assumption why is D necessary in order to get B? Complete the sentence &quot;In order to have B, I need to do D because...&quot; "
                                    android:inputType="textMultiLine" />

                                <TextView
                                    android:id="@+id/textView16"
                                    android:layout_width="wrap_content"
